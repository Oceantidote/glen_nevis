<div id="printableArea" style="width: 220px; margin: 0 auto;">
  <div style="text-align: center;">
    <span style="font-family: Arial, sans-serif">
      <span>Departing</span> <span id="departureDay"><%= @booking.departure.strftime('%A') %></span><br />
      <strong id="departureDate" style="font-size:50px;"><%= @booking.departure.strftime('%d %b') %></strong><br />
      Arrived: <span id="arrivalDate"></span> <%= @booking.arrival.strftime('%a %d %b %Y') %>
    </span>
    <span>
      <table text-align="center" width="100%">
        <tbody>
          <tr style="display: flex;">
            <td align="center" style="flex: 1;">
              <span style="font-family: Arial, sans-serif">
                <span style="font-family: Arial, sans-serif"><%= @booking.last_name %></span>
              </span>
            </td>
            <td style="flex: 1;">
              <span style="font-family: Arial, sans-serif">
                <span style="font-family: Arial, sans-serif"><%= @booking.vehicle_reg %></span>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </span>
    <strong style="font-size:16px; font-family: Arial, sans-serif">
      Electric Tent Pitch
      <br />
      <span>Adult: <%= @booking.adults %></span> <span>Child: <%= @booking.children %></span> <span>Infant: <%= @booking.infants %></span>
      <br />
      ID: <%= @booking.anytime_booking_id %> - <%= "Â£#{@booking.price_cents / 100.to_f}0" %>
    </strong><br>
    <strong style="font-size:16px; font-family: Arial, sans-serif"><%= @booking.pitch_name %></strong>
  </div>
</div>
<div class="controls-holder" style="display: flex; justify-content: center; margin-top: 20px">
  <div class="controls">
    <input type="number" name="" id="print_quantity" value="1">
    <button id="print-btn">Print</button>
  </div>
</div>
